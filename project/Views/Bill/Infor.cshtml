@model IEnumerable<project.Entities.ThongTinHoaHon>

@{
    ViewData["Title"] = "Infor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section js{
    <script type="text/javascript" src="~/js/InforBill.js"></script>
}


<div class="container-fluid">
    <!-- Row -->
    <div class="row">
        <div class="col-xl-12">
            <div class="row">
                <div class="col-xl-12">
                    <div class="page-title flex-wrap">
                        <div>
                            @*<select class="image-select bs-select dashboard-select me-3" aria-label="Default">
                            <option selected>Newest</option>
                            <option value="1">Oldest</option>
                            <option value="2">Recent</option>
                            </select>*@
                            <!-- Button trigger modal -->
                            <a asp-action="Index" asp-controller="Bill" type="button" class="btn btn-outline-danger">
                                Quay lại
                            </a>
                        </div>
                    </div>
                </div>
                <!--column-->
                <div class="col-xl-12 wow fadeInUp" data-wow-delay="1.5s">
                    <div class="table-responsive full-data">
                        <table class="table-responsive-lg table display dataTablesCard student-tab dataTable no-footer" id="example-student">
                            <thead>
                                <tr>
                                    <th>Món ăn</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                    <th>Công cụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="item-@item.MaThongTinHoaDon">
                                        <td><h6>@item.MonAn.TenMonAn</h6></td>
                                        <td><h6>@item.SoLuong</h6></td>
                                        <td><h6>@item.Tong</h6></td>
                                        <td>
                                            <button data-bs-toggle="modal" data-bs-target="#deleteModal" class="badge bg-secondary item-click" data-id="@item.MaThongTinHoaDon.ToString()">Xoá</button>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--/column-->
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xoá?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>
            </div>
            <div class="modal-body">Bạn có chắc là muốn xoá trường này?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Quay lại</button>
                <button type="button" class="btn btn-primary btn-submit">Xoá</button>
            </div>
        </div>
    </div>
</div>
