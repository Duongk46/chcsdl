@model project.Entities.MonAn

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ListCategory = (IEnumerable<project.Entities.LoaiMonAn>)ViewData["ListCategoryFood"];
}
<div class="container-fluid">
    <!-- row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@ViewBag.Title</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        <form class="form-valide-with-icon needs-validation" asp-action="Edit" asp-controller="Food" novalidate>
                            <input type="hidden" asp-for="MaMonAn" />
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-danger">@ViewBag.Message</div>
                            }
                            <div class="mb-3">
                                <label class="text-label form-label" for="TenMonAn">Tên món ăn</label>
                                <div class="input-group">
                                    <input asp-for="TenMonAn" type="text" class="form-control" id="TenMonAn" placeholder="Nhập tên món ăn.." required>
                                    <div class="invalid-feedback">
                                        Vui lòng nhập tên món ăn
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="text-label form-label" for="Gia">Giá</label>
                                <div class="input-group">
                                    <input asp-for="Gia" type="number" class="form-control" id="Gia" placeholder="Nhập giá.." required>
                                    <div class="invalid-feedback">
                                        Vui lòng nhập giá
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="text-label form-label" for="LoaiMonAn">Loại món ăn</label>
                                <div class="input-group">
                                    <select asp-items="@(new SelectList(ListCategory, "MaLoaiMonAn", "Ten"))" asp-for="LoaiMonAnID"></select>
                                </div>
                            </div>
                            <button type="submit" class="btn me-2 btn-primary">Chỉnh sửa</button>
                            <a type="button" asp-action="Index" asp-controller="Food" class="btn btn-danger light">Quay lại</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>