@model IEnumerable<project.Entities.TaiKhoan>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section js{
	<script type="text/javascript" src="~/js/Account.js"></script>
}


<div class="container-fluid">
	<!-- Row -->
	<div class="row">
		<div class="col-xl-12">
			<div class="row">
				<div class="col-xl-12">
					<div class="page-title flex-wrap">
						<div>
							<!-- Button trigger modal -->
							<a asp-action="Create" asp-controller="Account" type="button" class="btn btn-primary">
								+ Thêm mới
							</a>
						</div>
					</div>
				</div>
				<!--column-->
				<div class="col-xl-12 wow fadeInUp" data-wow-delay="1.5s">
					<div class="table-responsive full-data">
						<table class="table-responsive-lg table display dataTablesCard student-tab dataTable no-footer" id="example-student">
							<thead>
								<tr>
									<th>Tài khoản</th>
									<th>Họ tên</th>
									<th>Giới tính</th>
									<th>Điện thoại</th>
									<th>Địa chỉ</th>
									<th>Địa chỉ Email</th>
									<th>Ngày sinh</th>
									<th>Loại tài khoản</th>
									<th>Trạng thái</th>
									<th>Công cụ</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr class="item-@item.MaTaiKhoan">
										<td><h6>@item.UserName</h6></td>
										<td><h6>@item.HoTen</h6></td>
										<td><h6>@(item.GioiTinh == 1 ? "Nam" : item.GioiTinh == 2 ? "Nữ" : "Khác")</h6></td>
										<td><h6>@item.Phone</h6></td>
										<td><h6>@item.DiaChi</h6></td>
										<td><h6>@item.Email</h6></td>
										<td><h6>@(item.NgaySinh.ToString("dd/MM/yyyy"))</h6></td>
										<td><h6>@item.LoaiTaiKhoan.TenLoai</h6></td>
										<td><h6>@(item.Status == true ? "Kích hoạt" : "Không kích hoạt")</h6></td>
										<td>
											<a asp-action="Edit" asp-controller="Account" asp-route-id="@item.MaTaiKhoan" class="badge bg-warning">Chỉnh sửa</a>
											<button data-bs-toggle="modal" data-bs-target="#deleteModal" class="badge bg-secondary item-click" data-id="@item.MaTaiKhoan.ToString()">Xoá</button>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
				<!--/column-->
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="deleteModal" style="display: none;" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Xoá tài khoản?</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal">
				</button>
			</div>
			<div class="modal-body">Bạn có chắc là muốn xoá tài khoản này?</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Quay lại</button>
				<button type="button" class="btn btn-primary btn-submit">Xoá</button>
			</div>
		</div>
	</div>
</div>

